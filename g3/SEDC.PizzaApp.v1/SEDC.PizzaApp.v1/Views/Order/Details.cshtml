@model OrderViewModel

<h1>Order Details</h1>

<h3>Order Number: @Model.Id</h3>
@*<h3>User: @Model.FullName</h3>*@
<h3>User: @("Mr./ Ms. " + Model.FullName)</h3>
<h3>Adress: @Model.Address</h3>
<h3>Phone: @Model.Contact</h3>
<h3>Price: @Model.Price$</h3>

<h2>Order contains:</h2>
<div class="menu">
    @{
        foreach (var pizza in Model.Pizzas)
        {
            @*<p>- @pizza.Size.ToString() @pizza.Name = @pizza.Price$</p>*@
            @*@Html.Partial("~/Views/Shared/_pizza.cshtml", pizza);*@
            <partial name="~/Views/Shared/_pizza.cshtml" for="@pizza" />
        }
    }
</div>

<span class="order-status">Order Status - </span>
@if (Model.IsDelievered)
{
    <span class="order-status delieverd">Order is delieverd.</span>
}
else
{
    <span class="order-status not-delieverd">Order is coming to you, be patient!</span>
}

<div>
    <a asp-controller="Order" asp-action="Orders" class="btn btn-outline-primary">Back</a>
</div>
