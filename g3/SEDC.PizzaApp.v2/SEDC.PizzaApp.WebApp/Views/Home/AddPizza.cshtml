@model AddPizzaViewModel

@{ ViewBag.Title = "Add Pizza"; }

<h1>Add Pizza in the Menu</h1>

<form asp-controller="Home" asp-action="AddPizza" method="post">

    <label asp-for="Name"></label>
    <input asp-for="Name" /><br />

    <label asp-for="Price"></label>
    <input asp-for="Price" /><br />

    <label asp-for="Size"></label>
    <select asp-for="Size" asp-items="Html.GetEnumSelectList<PizzaSize>()"></select>

    <br />
    <br />

    <button type="submit" class="btn btn-outline-success">Add Pizza</button>

</form>