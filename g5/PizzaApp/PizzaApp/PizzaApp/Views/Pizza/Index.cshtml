@model List<PizzaViewModel>

<h4>Pizza List</h4>


<a asp-controller="Pizza" asp-action="Add" class="btn btn-block float-right col-2">Add</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <th scope="row">@(i + 1)</th>
            <td><img src="@Model[i].ImageUrl" height="100" width="100"/></td>
            <td>@Model[i].Name</td>
            <td>@Model[i].Description</td>
            <td>
                <a asp-controller="Pizza" asp-action="Details" asp-route-id="@Model[i].Id" class="btn btn-info">Details</a>
                <a asp-controller="Pizza" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                <a asp-controller="Pizza" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>