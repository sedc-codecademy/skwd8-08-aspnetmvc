@using SEDC.PizzaApp.Models.Enums
@model OrderViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrderPost" method="post">
            @*we have to send the Id, so that it is also packed in the form data*@
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="PizzaStore" class="control-label"></label>
                <input asp-for="PizzaStore" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PizzaName" class="control-label"></label>
                <input asp-for="PizzaName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select class="form-control" asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Delivered" class="control-label"></label>
                <input type="checkbox" asp-for="Delivered" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "Id", "FullName"))"></select>
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
    </div>
</div>