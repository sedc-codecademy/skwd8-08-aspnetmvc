@model List<OrderViewModel>

<h1>@ViewBag.Title</h1>

<h3>Your orders: </h3>
@{
    if (Model.Count == 0)
    {
        <h5>You have no orders.</h5>
        <a class="btn btn-primary" asp-controller="Order" asp-action="PlaceOrder">Place Order</a>
    }
    else
    {
        <button>Edit Orders</button>
        foreach (OrderViewModel order in Model)
        {
            @Html.Partial("~/Views/Partial/_OrderInfo.cshtml", order);
        }
    }
}
